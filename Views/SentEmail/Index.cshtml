@{
ViewData["Title"] = "SentEmail";
}


@if(ViewBag.user != null){

<div class="container">
    <div class="row">
       <partial name="/Views/Partial/_Header.cshtml" />

        <div class="col">
            <ul class="list-group">

                @foreach(var email in ViewBag.ListEmails){
                <li class="list-group-item">
                    <a class="row-email"  href="/SentEmail/ViewEmailSent?idEmail=email.EmailVm.EmailId">
                        <div class="container">
                            <div class="row">
                                <div class="col-2">
                                     <b class="text-dark">To: UserName</b>
                                </div>
                                <div class="col-8">
                                    <b>Title: @email.messageTitle</b>
                                    <span>Content: @email.messageContent</span>
                                </div>
                                <div class="col-1">
                                    <button class="btn btn-danger">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </a>
                </li>
                }
            </ul>
        </div>
    </div>
</div>

}